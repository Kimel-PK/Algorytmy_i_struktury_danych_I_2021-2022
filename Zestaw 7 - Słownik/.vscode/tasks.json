{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Słownik",
			"type": "shell",
			"command": "g++",
			"args": ["-std=c++11", "-Wall", "-o", "Dict.exe", "Dict.cpp"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Kopiuj rozwiązanie",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "rm ./Pegaz/*.cpp; rm ./Pegaz/*.hpp; rm ./Pegaz/Makefile; cp *.cpp ./Pegaz/; cp *.hpp ./Pegaz/; cp Makefile ./Pegaz/",
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		  }
	]
}